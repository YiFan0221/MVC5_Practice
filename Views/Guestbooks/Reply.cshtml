@model WebApplication1.Models.Guestbooks
@*建立回覆留言所需的表單*@

@using (Html.BeginForm())
{
    <h3>回覆留言</h3>
    @*建立回覆內容表格*@
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Content)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Content)
                @Html.ValidationMessageFor(model => model.Content)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Reply)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Reply)
                @Html.ValidationMessageFor(model => model.Reply)
            </td>
        </tr>
    </table>
    @*判斷是否有人回覆，如果無人回覆即可修改否則不可修改*@
    if (Model.ReplyTime.ToShortDateString() == "0001/1/1" || Model.ReplyTime == null)
    {
        <input type="submit" value="回覆留言" />
    }
    else
    {
        <text> 此留言已回覆，請</text>
        @Html.ActionLink("返回列表", "Index")
    }
}

@*匯入驗證欄位所需的JavaScript*@

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval.js")
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>


